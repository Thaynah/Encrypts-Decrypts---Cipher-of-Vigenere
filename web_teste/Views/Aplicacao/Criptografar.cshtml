@model web_teste.Models.Conteudo

    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()

        <nav>
            <ul>
                <li><a class="active" href="/aplicacao/criptografar">Criptografar</a></li>
                <li><a href="/aplicacao/descriptografar">Descriptografar</a></li>
            </ul>
        </nav>

        <div class="container box">
            <div class="col-md-12 col-xs-12 text-center">
                <h3>Criptografia Vigenére</h3>
                <small>Palavra-chave "THAYNAHCOSTA"</small>
                <hr />
            </div>
            <div class="col-md-6 col-xs-12 text-center">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group center-block">
                    <label class="control-label">Texto para Criptografar</label>
                    @Html.EditorFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6 col-xs-12 text-center">
                <div class="form-group center-block">
                        <label class="control-label">Resultado Criptografado do Texto</label>
                        @Html.EditorFor(model => model.CriptografiaVigenere, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CriptografiaVigenere, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                 <button type="submit" class="btn botao">Criptografar</button>
            </div>

        </div>
       




    }